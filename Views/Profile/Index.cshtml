@model EcoSwap.Models.User

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 32px 0;
    }

    .profile-card {
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
    }

    .profile-header {
        background: var(--panel);
        border-bottom: 1px solid var(--border-light);
        padding: 24px 32px;
    }

    .profile-header h1 {
        margin: 0;
        font-size: 24px;
        font-weight: 700;
        color: var(--text);
    }

    .profile-body {
        padding: 32px;
    }

    .success-message {
        background: var(--primary-light);
        color: var(--primary);
        border: 1px solid rgba(5, 150, 105, 0.2);
        border-radius: var(--radius-sm);
        padding: 12px 16px;
        margin-bottom: 24px;
        font-weight: 500;
    }

    .profile-info {
        display: grid;
        gap: 32px;
        align-items: start;
    }

    .profile-avatar-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 24px;
        background: var(--bg-soft);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-sm);
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--border);
        margin-bottom: 16px;
        transition: all 0.2s ease;
    }

    .profile-avatar:hover {
        border-color: var(--primary);
        transform: scale(1.02);
    }

    .profile-name {
        font-size: 20px;
        font-weight: 700;
        color: var(--text);
        margin: 0 0 4px;
    }

    .profile-email {
        color: var(--text-secondary);
        font-size: 14px;
        font-weight: 500;
    }

    .profile-details {
        display: grid;
        gap: 24px;
    }

    .detail-section {
        background: var(--bg-soft);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-sm);
        padding: 24px;
    }

    .detail-section h3 {
        margin: 0 0 16px;
        font-size: 16px;
        font-weight: 600;
        color: var(--text);
    }

    .detail-grid {
        display: grid;
        gap: 16px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--border-light);
    }

    .detail-item:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: var(--text-secondary);
        font-size: 14px;
    }

    .detail-value {
        color: var(--text);
        font-weight: 500;
        font-size: 14px;
    }

    .role-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .role-admin {
        background: var(--accent-light);
        color: var(--accent);
    }

    .role-user {
        background: var(--primary-light);
        color: var(--primary);
    }

    .profile-actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid var(--border-light);
    }

    .btn-edit {
        background: var(--primary);
        color: white;
        border: 1px solid var(--primary);
        border-radius: var(--radius-sm);
        padding: 12px 24px;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-edit:hover {
        background: var(--primary-hover);
        border-color: var(--primary-hover);
        color: white;
        text-decoration: none;
        transform: translateY(-1px);
    }

    /* Responsive Design */
    @@media (min-width: 768px) {
        .profile-info {
            grid-template-columns: 320px 1fr;
        }

        .detail-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @@media (max-width: 767px) {
        .profile-container {
            padding: 24px 16px;
        }

        .profile-header {
            padding: 20px 24px;
        }

        .profile-body {
            padding: 24px;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
        }

        .profile-name {
            font-size: 18px;
        }

        .profile-actions {
            justify-content: center;
        }
    }
</style>

<div class="container">
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-header">
                <h1>User Profile</h1>
            </div>
            
            <div class="profile-body">
                @if (TempData["Msg"] != null)
                {
                    <div class="success-message">@TempData["Msg"]</div>
                }
                
                <div class="profile-info">
                    <div class="profile-avatar-section">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureFileName))
                        {
                            <img src="~/images/@Model.ProfilePictureFileName" alt="Profile Picture" class="profile-avatar">
                        }
                        else
                        {
                            <div class="profile-avatar" style="background: var(--primary); display: flex; align-items: center; justify-content: center; color: white; font-size: 32px; font-weight: 700;">
                                @(Model.Name?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                        }
                        <h2 class="profile-name">@Model.Name</h2>
                        <p class="profile-email">@Model.Email</p>
                    </div>

                    <div class="profile-details">
                        <div class="detail-section">
                            <h3>Account Information</h3>
                            <div class="detail-grid">
                                <div class="detail-item">
                                    <span class="detail-label">Full Name</span>
                                    <span class="detail-value">@Model.Name</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Email Address</span>
                                    <span class="detail-value">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="profile-actions">
                    <a asp-action="Edit" class="btn-edit">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708L10.5 8.5 7.5 5.5 12.146.146ZM11.207 1.207 1.5 10.914V13.5h2.586L14.293 3.293 11.207 1.207Z"/>
                        </svg>
                        Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>