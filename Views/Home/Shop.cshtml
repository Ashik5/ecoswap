      alert(`Product Details:\n\n${product.name}\n${product.description}\n\nPrice: ৳${product.price.toLocaleString()}\nRating: ${product.rating}/5 (${product.reviews} reviews)\nEnvironmental Impact: Saves ${product.impactKg}kg plastic per month`);
    }

