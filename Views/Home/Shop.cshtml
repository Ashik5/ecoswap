  <script>
    // Product data
    const PRODUCTS = [
      { 
        id: 1, name: 'Bamboo Toothbrush Set', category: 'Personal Care', 
        price: 450, originalPrice: 650, rating: 4.8, reviews: 124,
        impactKg: 0.3, img: 'https://images.unsplash.com/photo-1585238342028-4bbc3a8d7b4a',
