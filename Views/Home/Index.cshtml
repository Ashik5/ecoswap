
  <main id="home" class="container">
    <!-- Hero -->
    <section class="hero">
      <div class="hero-grid">
        <div>
          <div class="kicker">Sustainable choices, measurable impact</div>
          <h1>Find eco‑friendly alternatives, track your impact, inspire your community</h1>
          <p class="lead">Built to support university and local communities with credible, locally relevant sustainability guidance.</p>
          <div style="margin-top: 24px; display: flex; gap: 12px; flex-wrap: wrap;">
            <a class="btn btn-primary" href="#alternatives">Browse Alternatives</a>
            <a class="btn btn-ghost" href="#calculator">Try Calculator</a>
          </div>
        </div>
        <div class="hero-card" aria-label="Quick platform metrics">
          <div class="grid grid-2" style="gap: 16px">
            <div class="card">
              <div class="body" style="padding: 20px">
                <div class="tag">Impact</div>
                <h3>Weekly plastic tracking</h3>
                <div class="muted">Calculate and reduce your plastic footprint with smart swaps.</div>
              </div>
            </div>
            <div class="card">
              <div class="body" style="padding: 20px">
                <div class="tag">Community</div>
                <h3>Peer suggestions</h3>
                <div class="muted">Discover alternatives from students and locals near you.</div>
              </div>
            </div>
          </div>
          <div class="hero-metrics">
            <div class="metric">
              <div class="num" id="m-products">120+</div>
              <div class="muted">Alt. Products</div>
            </div>
            <div class="metric">
              <div class="num" id="m-saved">~3.2kg</div>
              <div class="muted">Plastic saved / mo</div>
            </div>
            <div class="metric">
              <div class="num">AUST</div>
              <div class="muted">Campus pilot</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section id="features" style="background: var(--bg-soft); margin: 0 -50vw; padding-left: 50vw; padding-right: 50vw">
      <div class="container">
        <div class="section-head">
          <div>
            <h2>Platform Features</h2>
            <div class="section-desc">User management, product alternatives, impact calculator, community reviews, and admin moderation.</div>
          </div>
          <a class="btn btn-primary" href="#alternatives">Get started →</a>
        </div>
        <div class="grid grid-3">
          <article class="card">
            <div class="body">
              <div class="tag">User</div>
              <h3>Secure Accounts</h3>
              <p class="muted">Role‑based access, profile reputation, saved items, and notifications.</p>
            </div>
          </article>
          <article class="card">
            <div class="body">
              <div class="tag">Products</div>
              <h3>Eco Alternatives</h3>
              <p class="muted">Database of sustainable swaps with local availability and community suggestions.</p>
            </div>
          </article>
          <article class="card">
            <div class="body">
              <div class="tag">Impact</div>
              <h3>Calculator</h3>
              <p class="muted">Track plastic/waste savings and see personal impact over time.</p>
            </div>
          </article>
          <article class="card">
            <div class="body">
              <div class="tag">Community</div>
              <h3>Ideas & Reviews</h3>
              <p class="muted">Comment, upvote/downvote, post anonymously with safeguards.</p>
            </div>
          </article>
          <article class="card">
            <div class="body">
              <div class="tag">Search</div>
              <h3>Advanced Discovery</h3>
              <p class="muted">Filter by category, material, price, and local store availability.</p>
            </div>
          </article>
          <article class="card">
            <div class="body">
              <div class="tag">Admin</div>
              <h3>Moderation</h3>
              <p class="muted">Abuse reporting, content review queues, and reputation‑aware filtering.</p>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- Alternatives / Products -->
    <section id="alternatives">
      <div class="section-head">
        <div>
          <h2>Find Sustainable Alternatives</h2>
          <div class="section-desc">Search and compare eco‑friendly options for everyday items.</div>
        </div>
        <div class="search-controls">
          <input type="text" id="search" placeholder="Search alternatives..." oninput="filterProducts()" aria-label="Search alternatives" />
          <select id="category" onchange="filterProducts()" aria-label="Filter by category">
            <option value="">All categories</option>
            <option>Personal Care</option>
            <option>Kitchen</option>
            <option>Cleaning</option>
          </select>
        </div>
      </div>

      <div id="productGrid" class="grid grid-3"></div>
    </section>

    <!-- Impact Calculator -->
    <section id="calculator">
      <div class="section-head">
        <div>
          <h2>Impact Calculator</h2>
          <div class="section-desc">Estimate your monthly plastic savings by switching to reusable or low‑waste alternatives.</div>
        </div>
      </div>

      <div class="card">
        <div class="body">
          <div class="calc">
            <div class="grid grid-3">
              <div class="field">
                <label for="bottles">Plastic bottles per week</label>
                <input type="number" id="bottles" min="0" value="5" oninput="calcImpact()" />
              </div>
              <div class="field">
                <label for="bags">Plastic bags per week</label>
                <input type="number" id="bags" min="0" value="7" oninput="calcImpact()" />
              </div>
              <div class="field">
                <label for="straws">Straws per week</label>
                <input type="number" id="straws" min="0" value="3" oninput="calcImpact()" />
              </div>
            </div>
            <div class="field">
              <label for="adoption">Swap adoption rate</label>
              <input type="range" id="adoption" min="0" max="100" value="60" oninput="adoptionOut.textContent=this.value+'%'; calcImpact()" />
              <div class="muted">Estimated adoption: <b id="adoptionOut">60%</b></div>
            </div>
            <div class="result">
              <div>
                <div class="muted">Estimated monthly plastic saved</div>
                <div class="num" id="plasticSaved" style="font-size: 32px; font-weight: 800; color: var(--primary)">–</div>
              </div>
              <button class="btn btn-primary" onclick="saveEstimate()">Save to Profile</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Community -->
    <section id="community">
      <div class="section-head">
        <div>
          <h2>Community Suggestions</h2>
          <div class="section-desc">Share swaps, review products, and upvote helpful posts. Anonymous posting is supported.</div>
        </div>
        <button class="btn btn-primary" onclick="openPostDialog()">+ New Post</button>
      </div>

      <div class="card">
        <div id="postList" aria-live="polite">
          <!-- posts inserted by JS -->
        </div>
      </div>
    </section>

    <!-- Local Availability -->
    <section id="local" style="background: var(--bg-soft); margin: 0 -50vw; padding-left: 50vw; padding-right: 50vw">
      <div class="container">
        <div class="section-head">
          <div>
            <h2>Local Availability</h2>
            <div class="section-desc">Find nearby stores and campus vendors offering sustainable products.</div>
          </div>
        </div>
        <div class="card">
          <div class="body">
            <div class="grid grid-2">
              <div class="field">
                <label for="location">Area or campus</label>
                <input id="location" placeholder="e.g., Tejgaon, AUST Campus" />
              </div>
              <div class="field">
                <label for="item">Item</label>
                <input id="item" placeholder="e.g., bamboo toothbrush" />
              </div>
            </div>
            <div style="margin-top: 16px; display: flex; gap: 12px">
              <button class="btn btn-primary" onclick="searchLocal()">Search</button>
              <button class="btn btn-ghost" onclick="clearLocal()">Clear</button>
            </div>
            <div id="localResults" style="margin-top: 20px" class="muted">Enter location and item to search for local availability.</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Admin -->
    <section id="admin">
      <div class="section-head">
        <div>
          <h2>Admin Moderation</h2>
          <div class="section-desc">Review reported posts and manage product suggestions.</div>
        </div>
      </div>
      <div class="card">
        <div class="body">
          <h3 style="margin: 0 0 16px">Reports Queue</h3>
          <table aria-label="Reports table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Reason</th>
                <th>Submitted</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="reportsTable"></tbody>
          </table>
        </div>
      </div>
    </section>
  </main>