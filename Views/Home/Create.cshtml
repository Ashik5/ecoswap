<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Product - EcoSwap Admin</title>
  <!-- Use Inter font from Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <!-- Load Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom CSS variables from the landing page design */
    :root {
      --primary: #4CAF50;
      --primary-light: #E8F5E9;
      --secondary: #2196F3;
      --accent: #FFC107;
      --text-dark: #333;
      --text-muted: #666;
      --bg-light: #F9F9F9;
      --bg-soft: #F0F4F7;
      --bg-dark: #37474F;
      --card-bg: #FFFFFF;
      --border-color: #E0E0E0;
    }

    /* Core styles matching the admin and landing page */
    body {
      font-family: 'Inter', sans-serif;
      line-height: 1.6;
      color: var(--text-dark);
      background: var(--bg-light);
      margin: 0;
      padding: 0;
      scroll-behavior: smooth;
    }

    .container {
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      padding: 0 24px;
    }

    .card {
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      border: 1px solid var(--border-color);
      padding: 24px;
      margin-bottom: 24px;
    }

    /* Admin-specific layout with sidebar */
    .admin-layout {
      display: grid;
      grid-template-columns: 280px 1fr;
      min-height: 100vh;
    }

    @@media (max-width: 768px) {
      .admin-layout {
        grid-template-columns: 1fr;
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        width: 280px;
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
        z-index: 50;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
      }
      .sidebar.open {
        transform: translateX(0);
      }
    }

    /* Sidebar styles matching the home page design */
    .sidebar {
      background: var(--card-bg);
      border-right: 1px solid var(--border-color);
      padding: 2rem 0;
      display: flex;
      flex-direction: column;
    }

    .sidebar-logo {
      font-size: 1.125rem;
      font-weight: 700;
      color: var(--text-dark);
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0 24px;
      margin-bottom: 2rem;
    }
    
    .sidebar-logo .logo {
      width: 32px;
      height: 32px;
      border-radius: 8px;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 14px;
    }

    .nav-links a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 24px;
      color: var(--text-dark);
      font-weight: 500;
      text-decoration: none;
      transition: background-color 0.2s ease, color 0.2s ease;
    }
    
    .nav-links a:hover, .nav-links a.active {
      background: var(--primary-light);
      color: var(--primary);
    }
    
    .nav-links a.active svg {
      color: var(--primary);
    }

    .page-title {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
    }

    .form-section {
      margin-bottom: 2rem;
    }

    .form-section h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .form-grid-3 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 20px;
    }

    .form-field {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-bottom: 20px;
    }

    .form-field.full-width {
      grid-column: 1 / -1;
    }

    label {
      font-weight: 600;
      color: var(--text-dark);
      font-size: 14px;
    }

    .required {
      color: #dc2626;
    }

    input[type="text"], input[type="number"], input[type="url"], input[type="email"], select, textarea {
      background: var(--card-bg);
      color: var(--text-dark);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 12px 16px;
      font-size: 14px;
      transition: all 0.2s ease;
      font-family: inherit;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    .btn {
      cursor: pointer;
      border: 0;
      border-radius: 8px;
      padding: 12px 20px;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-family: inherit;
      text-decoration: none;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white;
    }
    
    .btn-primary:hover {
      background: #047857;
    }
    
    .btn-secondary {
      background: var(--secondary);
      color: white;
    }
    
    .btn-secondary:hover {
      background: #1d4ed8;
    }
    
    .btn-ghost {
      background: transparent;
      color: var(--text-muted);
      border: 1px solid var(--border-color);
    }
    
    .btn-ghost:hover {
      background: var(--bg-soft);
      color: var(--text-dark);
    }

    .tag {
      display: inline-block;
      font-size: 11px;
      padding: 4px 10px;
      border-radius: 999px;
      background: var(--primary-light);
      color: var(--primary);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .tag.impact { background: #fef3c7; color: #d97706; }
    .tag.community { background: #dbeafe; color: #2563eb; }
    .tag.local { background: #f3e8ff; color: #7c3aed; }

    .help-text {
      font-size: 13px;
      color: var(--text-muted);
      margin-top: 4px;
    }

    .form-actions {
      display: flex;
      gap: 12px;
      justify-content: flex-end;
      padding-top: 24px;
      border-top: 1px solid var(--border-color);
      margin-top: 32px;
    }

    .checkbox-group {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .checkbox-item input[type="checkbox"] {
      width: 16px;
      height: 16px;
      accent-color: var(--primary);
    }

    .checkbox-item label {
      margin: 0;
      font-weight: 500;
    }

    .image-upload {
      border: 2px dashed var(--border-color);
      border-radius: 8px;
      padding: 32px;
      text-align: center;
      background: var(--bg-soft);
      transition: border-color 0.2s ease;
    }

    .image-upload:hover {
      border-color: var(--primary);
    }

    .image-upload.dragover {
      border-color: var(--primary);
      background: var(--primary-light);
    }

    @@media (max-width: 768px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
      .form-grid-3 {
        grid-template-columns: 1fr;
      }
      .form-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="admin-layout">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-logo">
        <span>EcoSwap Admin</span>
      </div>
      <div class="nav-links">
        <a href="#" onclick="showSection('dashboard')">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="7" height="9"></rect>
            <rect x="14" y="3" width="7" height="5"></rect>
            <rect x="14" y="12" width="7" height="9"></rect>
            <rect x="3" y="16" width="7" height="5"></rect>
          </svg>
          Dashboard
        </a>
        <a href="#" onclick="showSection('users')">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="8.5" cy="7" r="4"></circle>
            <path d="M20 8v6M23 11h-6"></path>
          </svg>
          User Management
        </a>
        <a href="#" class="active" onclick="showSection('products')">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4zM3.8 6h16.4M16 10a2 2 0 0 1 0 4.2"></path>
          </svg>
          Product Management
        </a>
        <a href="#" onclick="showSection('moderation')">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
          </svg>
          Content Moderation
        </a>
        <a href="#" onclick="showSection('reports')">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M2 13a4 4 0 0 0 4 4h14a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v1"></path>
            <path d="M12 10.5V20M12 10.5h-5.5a2.5 2.5 0 0 1-2.5-2.5v-2a2.5 2.5 0 0 1 2.5-2.5h11.5a2.5 2.5 0 0 1 2.5 2.5v2a2.5 2.5 0 0 1-2.5 2.5H12zM12 20h2"></path>
          </svg>
          Analytics & Reports
        </a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="p-6 md:p-8">
        <div style="margin-bottom: 2rem;">
          <h1 class="page-title">Create New Product</h1>
          <p style="color: var(--text-muted);">Add a new sustainable alternative to help users make eco-friendly choices.</p>
        </div>

        <form id="productForm">
          <!-- Basic Information -->
          <div class="card">
            <div class="form-section">
              <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                  <path d="M3 6h18"></path>
                  <path d="M16 10a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v4z"></path>
                </svg>
                Basic Information
              </h3>
              
              <div class="form-grid">
                <div class="form-field">
                  <label for="productName">Product Name <span class="required">*</span></label>
                  <input type="text" id="productName" name="productName" required placeholder="e.g., Bamboo Toothbrush">
                  <div class="help-text">Choose a clear, descriptive name for the eco-friendly product</div>
                </div>
                
                <div class="form-field">
                  <label for="category">Category <span class="required">*</span></label>
                  <select id="category" name="category" required>
                    <option value="">Select Category</option>
                    <option value="Personal Care">Personal Care</option>
                    <option value="Kitchen">Kitchen & Dining</option>
                    <option value="Cleaning">Cleaning & Household</option>
                    <option value="Fashion">Fashion & Accessories</option>
                    <option value="Office">Office & Stationery</option>
                    <option value="Beauty">Beauty & Cosmetics</option>
                    <option value="Storage">Storage & Organization</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
              </div>

              <div class="form-field full-width">
                <label for="description">Description <span class="required">*</span></label>
                <textarea id="description" name="description" rows="4" required placeholder="Describe the product, its benefits, and what makes it a sustainable alternative..."></textarea>
                <div class="help-text">Provide detailed information about the product's eco-friendly features and benefits</div>
              </div>

              <div class="form-grid">
                <div class="form-field">
                  <label for="brand">Brand/Manufacturer</label>
                  <input type="text" id="brand" name="brand" placeholder="e.g., EcoBrush Co.">
                </div>
                
                <div class="form-field">
                  <label for="price">Estimated Price (BDT)</label>
                  <input type="number" id="price" name="price" min="0" step="0.01" placeholder="0.00">
                  <div class="help-text">Optional: Average price in Bangladeshi Taka</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Environmental Impact -->
          <div class="card">
            <div class="form-section">
              <h3>
                <span class="tag impact">Impact</span>
                Environmental Impact Data
              </h3>
              
              <div class="form-grid-3">
                <div class="form-field">
                  <label for="plasticSaved">Plastic Saved (kg/month)</label>
                  <input type="number" id="plasticSaved" name="plasticSaved" min="0" step="0.01" placeholder="0.50">
                  <div class="help-text">Estimated plastic reduction per user per month</div>
                </div>
                
                <div class="form-field">
                  <label for="carbonReduction">Carbon Reduction (kg CO2/month)</label>
                  <input type="number" id="carbonReduction" name="carbonReduction" min="0" step="0.01" placeholder="1.20">
                  <div class="help-text">Estimated carbon footprint reduction</div>
                </div>
                
                <div class="form-field">
                  <label for="wasteReduction">Waste Reduction (%)</label>
                  <input type="number" id="wasteReduction" name="wasteReduction" min="0" max="100" placeholder="75">
                  <div class="help-text">Percentage of waste reduced compared to conventional alternative</div>
                </div>
              </div>

              <div class="form-field full-width">
                <label for="sustainabilityFeatures">Sustainability Features</label>
                <div class="checkbox-group">
                  <div class="checkbox-item">
                    <input type="checkbox" id="biodegradable" name="sustainabilityFeatures" value="biodegradable">
                    <label for="biodegradable">Biodegradable</label>
                  </div>
                  <div class="checkbox-item">
                    <input type="checkbox" id="recyclable" name="sustainabilityFeatures" value="recyclable">
                    <label for="recyclable">Recyclable</label>
                  </div>
                  <div class="checkbox-item">
                    <input type="checkbox" id="reusable" name="sustainabilityFeatures" value="reusable">
                    <label for="reusable">Reusable</label>
                  </div>
                  <div class="checkbox-item">
                    <input type="checkbox" id="organic" name="sustainabilityFeatures" value="organic">
                    <label for="organic">Organic Materials</label>
                  </div>
                  <div class="checkbox-item">
                    <input type="checkbox" id="renewable" name="sustainabilityFeatures" value="renewable">
                    <label for="renewable">Made from Renewable Resources</label>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Local Availability -->
          <div class="card">
            <div class="form-section">
              <h3>
                <span class="tag local">Local</span>
                Local Availability
              </h3>
              
              <div class="form-grid">
                <div class="form-field">
                  <label for="availableAreas">Available Areas</label>
                  <input type="text" id="availableAreas" name="availableAreas" placeholder="e.g., Dhaka, Tejgaon, AUST Campus">
                  <div class="help-text">Comma-separated list of areas where this product is available</div>
                </div>
                
                <div class="form-field">
                  <label for="stores">Local Stores/Vendors</label>
                  <input type="text" id="stores" name="stores" placeholder="e.g., GreenMart, Campus Co-op, EcoHub">
                  <div class="help-text">Stores or vendors that sell this product locally</div>
                </div>
              </div>

              <div class="form-field full-width">
                <label for="purchaseUrl">Online Purchase URL</label>
                <input type="url" id="purchaseUrl" name="purchaseUrl" placeholder="https://example.com/product">
                <div class="help-text">Optional: Direct link to purchase this product online</div>
              </div>
            </div>
          </div>

          <!-- Product Images -->
          <div class="card">
            <div class="form-section">
              <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <path d="M21 15l-5-5L5 21"></path>
                </svg>
                Product Images
              </h3>
              
              <div class="form-field full-width">
                <label>Product Images</label>
                <div class="image-upload" id="imageUpload">
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--text-muted); margin: 0 auto 16px;">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="17,8 12,3 7,8"></polyline>
                    <line x1="12" y1="3" x2="12" y2="15"></line>
                  </svg>
                  <p style="margin: 0 0 8px; font-weight: 600;">Drag and drop images here or click to browse</p>
                  <p style="margin: 0; color: var(--text-muted); font-size: 13px;">PNG, JPG up to 5MB each</p>
                  <input type="file" id="imageInput" name="images" multiple accept="image/*" style="display: none;">
                </div>
                <div class="help-text">Upload high-quality images showing the product and its sustainable features</div>
              </div>
            </div>
          </div>

          <!-- Alternative To -->
          <div class="card">
            <div class="form-section">
              <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                  <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                </svg>
                Alternative Information
              </h3>
              
              <div class="form-field full-width">
                <label for="replaces">What does this product replace?</label>
                <input type="text" id="replaces" name="replaces" placeholder="e.g., Plastic toothbrush, Single-use water bottles">
                <div class="help-text">What conventional products does this eco-friendly alternative replace?</div>
              </div>

              <div class="form-field full-width">
                <label for="comparisonNotes">Comparison with Conventional Products</label>
                <textarea id="comparisonNotes" name="comparisonNotes" rows="3" placeholder="Explain the advantages of this sustainable alternative over conventional products..."></textarea>
                <div class="help-text">Highlight the benefits and any trade-offs compared to conventional alternatives</div>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="form-actions">
            <button type="button" class="btn btn-ghost" onclick="cancelForm()">Cancel</button>
            <button type="button" class="btn btn-secondary" onclick="saveAsDraft()">Save as Draft</button>
            <button type="submit" class="btn btn-primary">Create Product</button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    // Image upload functionality
    const imageUpload = document.getElementById('imageUpload');
    const imageInput = document.getElementById('imageInput');

    imageUpload.addEventListener('click', () => {
      imageInput.click();
    });

    imageUpload.addEventListener('dragover', (e) => {
      e.preventDefault();
      imageUpload.classList.add('dragover');
    });

    imageUpload.addEventListener('dragleave', () => {
      imageUpload.classList.remove('dragover');
    });

    imageUpload.addEventListener('drop', (e) => {
      e.preventDefault();
      imageUpload.classList.remove('dragover');
      const files = e.dataTransfer.files;
      handleImageUpload(files);
    });

    imageInput.addEventListener('change', (e) => {
      handleImageUpload(e.target.files);
    });

    function handleImageUpload(files) {
      console.log('Uploading files:', files);
      // Here you would implement the actual image upload logic
      // For demo purposes, just show the number of files
      if (files.length > 0) {
        imageUpload.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--primary); margin: 0 auto 16px;">
            <path d="M20 6L9 17l-5-5"></path>
          </svg>
          <p style="margin: 0 0 8px; font-weight: 600; color: var(--primary);">${files.length} image(s) selected</p>
          <p style="margin: 0; color: var(--text-muted); font-size: 13px;">Click to change selection</p>
        `;
      }
    }

    // Form submission
    document.getElementById('productForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Collect form data
      const formData = new FormData(this);
      
      // Get sustainability features
      const sustainabilityFeatures = [];
      document.querySelectorAll('input[name="sustainabilityFeatures"]:checked').forEach(checkbox => {
        sustainabilityFeatures.push(checkbox.value);
      });
      
      const productData = {
        name: formData.get('productName'),
        category: formData.get('category'),
        description: formData.get('description'),
        brand: formData.get('brand'),
        price: formData.get('price'),
        plasticSaved: formData.get('plasticSaved'),
        carbonReduction: formData.get('carbonReduction'),
        wasteReduction: formData.get('wasteReduction'),
        sustainabilityFeatures: sustainabilityFeatures,
        availableAreas: formData.get('availableAreas'),
        stores: formData.get('stores'),
        purchaseUrl: formData.get('purchaseUrl'),
        replaces: formData.get('replaces'),
        comparisonNotes: formData.get('comparisonNotes')
      };

      console.log('Product data:', productData);
      
      // Simulate API call
      setTimeout(() => {
        alert('Product created successfully!');
        // In a real app, you would redirect to the product list or product detail page
        // window.location.href = '/admin/products';
      }, 1000);
    });

    function saveAsDraft() {
      console.log('Saving as draft...');
      // Add your draft saving logic here
    }

    // Form submission
    document.getElementById('productForm').addEventListener('submit', function(e) {
