  <script>
    // Toggles the mobile menu
    const sidebarToggleBtn = document.getElementById('sidebar-toggle');
    const sidebar = document.getElementById('sidebar');
    const modalOverlay = document.getElementById('modalOverlay');
    const modalMessage = document.getElementById('modalMessage');
    const modalConfirmBtn = document.getElementById('modalConfirmBtn');
    const modalCancelBtn = document.getElementById('modalCancelBtn');

    sidebarToggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('open');
    });

    // Function to show the selected section and update the sidebar
    function showSection(sectionId) {
      // Hide all sections
      document.querySelectorAll('.content-section').forEach(section => {
        section.classList.add('hidden');
      });

      // Show the selected section
      const activeSection = document.getElementById(sectionId);
      if (activeSection) {
        activeSection.classList.remove('hidden');
      }

      // Update active link in the sidebar
      document.querySelectorAll('.nav-links a').forEach(link => {
        link.classList.remove('active');
      });
      const activeLink = document.querySelector(`.nav-links a[onclick="showSection('${sectionId}')"]`);
      if (activeLink) {
        activeLink.classList.add('active');
      }

      // Hide sidebar on mobile after selection
      if (window.innerWidth <= 768) {
        sidebar.classList.remove('open');
      }

      // Update page title
      const pageTitle = document.getElementById('page-title');
      const titles = {
        'dashboard': 'Dashboard',
        'users': 'User Management',
        'products': 'Product Management',
        'moderation': 'Content Moderation',
        'reports': 'Analytics & Reports',
        'settings': 'System Settings'
      };
      pageTitle.textContent = titles[sectionId] || 'Dashboard';
    }

    // Custom dialog function to replace alert() and confirm()
    function showDialog(action, itemId) {
      let message = '';
      let confirmAction = () => {};
      let needsConfirmation = false;
      
      switch(action) {
        case 'deactivate':
          message = `Are you sure you want to deactivate user ${itemId}?`;
          confirmAction = () => console.log(`User ${itemId} deactivated.`);
          needsConfirmation = true;
          break;
        case 'remove':
          message = `Are you sure you want to remove product ${itemId}?`;
          confirmAction = () => console.log(`Product ${itemId} removed.`);
          needsConfirmation = true;
          break;
        case 'approve':
          message = `Report ${itemId} approved.`;
          confirmAction = () => console.log(`Report ${itemId} approved.`);
          break;
        case 'dismiss':
          message = `Report ${itemId} dismissed.`;
          confirmAction = () => console.log(`Report ${itemId} dismissed.`);
          break;
        case 'export':
          message = `Exporting data...`;
          confirmAction = () => console.log(`Data export initiated.`);
          break;
        default:
          return;
      }
      
      modalMessage.textContent = message;
      modalConfirmBtn.onclick = () => {
        confirmAction();
        modalOverlay.classList.remove('open');
      };

      if (needsConfirmation) {
        modalCancelBtn.style.display = 'inline-block';
        modalCancelBtn.onclick = () => {
          console.log('Action cancelled.');
          modalOverlay.classList.remove('open');
        };
      } else {
        modalCancelBtn.style.display = 'none';
        modalConfirmBtn.onclick = () => {
          confirmAction();
          modalOverlay.classList.remove('open');
        };
      }

      modalOverlay.classList.add('open');
    }

    // Initialize dashboard view
    document.addEventListener('DOMContentLoaded', function() {
      showSection('dashboard');
    });

    // Add some dynamic behavior for demo
    setTimeout(() => {
      const statNumbers = document.querySelectorAll('.stat-number');
      statNumbers.forEach(stat => {
        if (stat.textContent.includes('1,247')) {
          stat.textContent = '1,248';
          const change = stat.parentElement.querySelector('.stat-change');
          change.textContent = '+13% this month';
        }
      });
    }, 5000);
  </script>
